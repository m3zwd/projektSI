{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.recipe_list'|trans }}
{% endblock %}

{% block title_header %}
    <h1>{{ 'title.recipe_list'|trans }}</h1>
{% endblock %}

{% block body %}
    {# przycisk do pokazania formularza filtrów #}
    <button class="btn btn-primary mb-3" onclick="toggleFilterForm()">
        {{ 'label.filters'|trans }}
    </button>

    {# formularz filtrów #}
    <form id="filter_form" method="get" action="{{ path('recipe_index') }}" class="mb-4">

        {# filtry kategorii #}
        {% set rawCategoryIds = app.request.get('categories') %}
        {% set selectedCategoryIds = rawCategoryIds is iterable ? rawCategoryIds : (rawCategoryIds ? [rawCategoryIds] : []) %}
        <div class="mb-3">
            <label class="form-label">{{ 'label.categories'|trans }}</label>
            <div class="dropdown">
                <button
                        class="btn btn-outline-secondary dropdown-toggle"
                        type="button"
                        data-bs-toggle="dropdown"
                        data-bs-auto-close="outside"
                        aria-expanded="false">
                    {{ 'label.select_categories'|trans }}
                </button>
                <div class="dropdown-menu p-3">
                    <div class="form-check">
                        <input
                                class="form-check-input"
                                type="checkbox"
                                name="categories[]"
                                value=""
                                id="categoryAll"
                                {{ not app.request.get('categories') ? 'checked' : '' }}
                        >
                        <label class="form-check-label" for="categoryAll">
                            {{ 'label.all'|trans }}
                        </label>
                    </div>
                    {% for category in categories %}
                        <div class="form-check">
                            <input
                                    class="form-check-input"
                                    type="checkbox"
                                    name="categories[]"
                                    value="{{ category.id }}"
                                    id="category_{{ category.id }}"
                                    {{ category.id in selectedCategoryIds ? 'checked' : '' }}
                            >
                            <label class="form-check-label" for="category_{{ category.id }}">
                                {{ category.title }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>


        {# filtry tagów #}
        {% set rawTagIds = app.request.get('tagIds') %}
        {% set selectedTagIds = rawTagIds is iterable ? rawTagIds : (rawTagIds ? [rawTagIds] : []) %}
        <div class="mb-3">
            <label class="form-label">{{ 'label.tags'|trans }}</label>
            <div class="dropdown">
                <button
                        class="btn btn-outline-secondary dropdown-toggle"
                        type="button"
                        data-bs-toggle="dropdown"
                        data-bs-auto-close="outside"
                        aria-expanded="false">
                    {{ 'label.select_tags'|trans }}
                </button>
                <div class="dropdown-menu p-3">
                    <div class="form-check">
                        <input
                                class="form-check-input"
                                type="checkbox"
                                name="tags[]"
                                value=""
                                id="tagAll"
                                {{ not app.request.get('tagIds') ? 'checked' : '' }}
                        >
                        <label class="form-check-label" for="tagAll">
                            {{ 'label.all'|trans }}
                        </label>
                    </div>
                    {% for tag in tags %}
                        <div class="form-check">
                            <input
                                    class="form-check-input"
                                    type="checkbox"
                                    name="tags[]"
                                    value="{{ tag.id }}"
                                    id="tag_{{ tag.id }}"
                                    {{ tag.id in selectedTagIds ? 'checked' : '' }}
                            >
                            <label class="form-check-label" for="tag_{{ tag.id }}">
                                {{ tag.title }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        {# filtry użytkownika #}
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="onlyMine" value="1" id="onlyMine"
                   {% if app.request.get('onlyMine') %}checked{% endif %}>
            <label class="form-check-label" for="onlyMine">
                {{ 'label.only_mine'|trans }}
            </label>
        </div>

        {# przycisk do filtrowania #}
        <div class="filters_bottom">
            <button type="submit" class="btn btn-primary">
                {{ 'action.filter'|trans }}
            </button>
        </div>
    </form>

    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'recipe.id') }}</th>
                {% endif %}
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'recipe.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'recipe.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'recipe.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.category'|trans, 'category.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.author'|trans, 'recipe.author.email') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in pagination.items %}
                <tr>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>{{ recipe.id }}</td>
                    {% endif %}
                    <td>{{ recipe.title }}</td>
                    <td>{{ recipe.createdAt|format_date('long') }}</td>
                    <td>{{ recipe.updatedAt|format_date('long') }}</td>
                    <td>{{ recipe.category.title }}</td>
                    <td>{{ recipe.author.email }}</td>
                    <td>
                        <a class="btn btn-outline-success btn-sm" href="{{ url('recipe_view', {id: recipe.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                        {% if is_granted('RECIPE_EDIT', recipe) %}
                            <a class="btn btn-outline-primary btn-sm" href="{{ url('recipe_edit', {id: recipe.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('RECIPE_DELETE', recipe) %}
                            <a class="btn btn-outline-danger btn-sm" href="{{ url('recipe_delete', {id: recipe.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="bottom">
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

            {% if is_granted('ROLE_USER') %}
                <p>
                    <a href="{{ url('recipe_create') }}" class="btn btn-primary">
                        {{ 'action.recipe_create'|trans }}
                    </a>
                </p>
            {% endif %}
        </div>

    {% else %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'message.empty_list'|trans
        } %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function toggleFilterForm() {
            const form = document.getElementById('filter_form');
            const btn = document.getElementById('filterToggleBtn');

            if (form.style.display === 'none' || form.style.display === '') {
                form.style.display = 'block';
                if (btn) btn.innerHTML = '<i class="bi bi-funnel"></i> {{ "action.hide_filters"|trans }}';
            } else {
                form.style.display = 'none';
                if (btn) btn.innerHTML = '<i class="bi bi-funnel"></i> {{ "action.show_filters"|trans }}';
            }
        }
    </script>
{% endblock %}