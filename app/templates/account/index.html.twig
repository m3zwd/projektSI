{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.account'|trans }}
{% endblock %}

{% block title_header %}
    <h1>{{ 'title.account'|trans }}</h1>
{% endblock %}

{% block body %}
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'label.roles'|trans }}</dt>
            <dd>{{ user.roles|join(', ') }}</dd>
            <dt>{{ 'label.password'|trans }}</dt>
            <dd>{{ user.password }}</dd>
        </dl>

        <p>
            <a href="{{ url('account_edit') }}" class="btn btn-primary">
                {{ 'action.account_edit'|trans }}
            </a>
        </p>

        <h2>{{ 'title.my_recipes'|trans }}</h2>
        {% if recipes is defined and recipes|length %}
            <ul>
                {% for recipe in recipes %}
                    <li>
                        <a href="{{ url('recipe_view', {id: recipe.id}) }}">
                            {{ recipe.title }}
                        </a>
                        â€“ {{ recipe.createdAt|date('Y/m/d') }}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>{{ 'label.none'|trans }}</p>
        {% endif %}

    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}