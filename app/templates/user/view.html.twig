{% extends 'base.html.twig' %}

{% block title %}
    {{ user.email }}
{% endblock %}

{% block title_header %}
    <h1>{{ user.email }}</h1>
{% endblock %}

{% block body %}
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'label.roles'|trans }}</dt>
            <dd>
                {% for role in user.roles %}
                    {% if role == 'ROLE_ADMIN' %}
                        <div class="btn btn-secondary btn-sm">{{ 'role.admin'|trans }}</div>
                    {% elseif role == 'ROLE_USER' %}
                        <div class="btn btn-outline-secondary btn-sm">{{ 'role.user'|trans }}</div>
                    {% endif %}
                {% endfor %}
            </dd>
        </dl>

        <p>
            <a href="{{ path('user_change_password', {'id': user.id}) }}" class="btn btn-warning">
                {{ 'action.change_user_password'|trans }}
            </a>
        </p>
        <p>
            <a href="{{ path('user_change_role', {'id': user.id}) }}" class="btn btn-info">
                {{ 'action.change_role'|trans }}
            </a>
        </p>

        <h2>{{ 'title.user_recipes'|trans }}</h2>
        {% if recipes is defined and recipes|length %}
            <ul>
                {% for recipe in recipes %}
                    <li>
                        <a href="{{ url('recipe_view', {id: recipe.id}) }}">
                            {{ recipe.title }}
                        </a>
                        â€“ {{ recipe.createdAt|date('Y/m/d') }}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>{{ 'message.no_recipes_for_user'|trans }}</p>
        {% endif %}

        <p>
            <a href="{{ url('user_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}